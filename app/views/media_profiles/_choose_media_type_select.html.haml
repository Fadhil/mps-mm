= form_for '', url: filter_media_profiles_path do |f|
  .row
    %h3.four.columns
      = t('.choose_media_type')  
  .row   
    .twelve.columns 
      %ul.media-type-select
        %li.field
          .picker
            - select_options = [[t('all'),'all'],[t('all_media'),'all_media']] + MediaProfile.media_types.map{ |a| [a,a]}
            = select_tag 'media_profile_select', options_for_select(select_options, selected: @media_type), include_blank: true, onChange: "submit();"
        %li.field
          = f.text_field :search, class: 'text input', size: '60', placeholder: t('enter_search_terms')
        %li
          %span.inline.btn.medium.primary
            = f.button t('select')