.row.sign-in
  .eight.columns.centered
    %h3= t('sign_in')
.row
  .eight.columns.centered
    - unless current_user
      .panel
        .row
          %h6.twelve.columns
            
        .row
          = form_for(resource, :url => session_path(resource)) do |f|
            %ul.eleven.columns
              %li.field
                = f.text_field :login, :autofocus => true, :class => 'email input', :placeholder => t('username')
              %li.field
                = f.password_field :password, :class => 'password input', :placeholder => t('password')
                %small
                  = t('password_length_hint')
              %li.field
                .eight.columns
                  - if devise_mapping.rememberable?
                    = f.label t('remember_me'), :class => 'checkbox', :for => 'user_remember_me' do
                      = f.check_box :remember_me, :checked => 'checked'
                      %span
                      = t('remember_me')
                .four.columns
                  = f.submit t('login'), :class => ' pretty medium warning btn'
    =# render "devise/shared/links"
