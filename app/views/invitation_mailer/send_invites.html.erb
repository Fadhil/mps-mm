
<div class='background-invitation' style="background-image: url('http://<%= @the_domain %>/assets/invitation.png');
    height: 1500px;
    background-repeat: no-repeat;
    width: 960px;
    padding-left: 10px;
    font-family: Helvetica;">
  <div class='attendee-name' style="padding-top:310px;
    text-align: center;
    font-size: 1.6em;
    font-weight: bold;
    text-transform: uppercase;">
    <%= @attendee.full_name_with_prefix %>
  </div>
  <div class='attendee-designation' style="text-align: center;
    font-size: 1.6em;
    font-weight: 100;
    text-transform: uppercase;">
    <%= @attendee.designation %>
  </div>
  <div class='event-name' style="padding-top:100px;
    text-align: center;
    font-size: 2.0em;
    font-weight: bold;
    text-transform: uppercase;">
    <%= @event.name %>
  </div>
  <div class='event-details' style="padding-top: 95px; padding-left: 240px;
    font-size:1.2em;
    font-weight: 100;">
    <div class='date'>
      <%= @event.date %>
    </div>
    <div class='time padding-extra' style="padding-top: 5px;">
      <%= @event.time_string %>
    </div>
    <div class='place padding-extra' style="padding-top: 5px;">
      <%= @event.venue %>
    </div>
    <div class='organizer padding-extra' style="padding-top: 5px;">
      <%= @event.organizer %>
    </div>
  </div>
</div>
