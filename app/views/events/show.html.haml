.row
  %h2.six.columns= t('.title')
  .btn.secondary.medium.push_three.three.columns
    = link_to t('edit_event'), edit_event_path(@event)

%table.rounded

  %tbody
    %tr
      %td=t('date')
      %td= @event.date.strftime('%d-%m-%Y')
    %tr
      %td=t('time')
      %td= @event.time.to_s(:time)
    %tr
      %td=t('agenda_details')
      %td= @event.agenda_details.blank? ? '' : content_tag(:a, href: @event.agenda_details, class: 'image-link') do image_tag(@event.agenda_details.thumb) end
    %tr
      %td=t('letter')
      %td= @event.letter.blank? ? '' : content_tag(:a, href: @event.letter, class: 'image-link') do image_tag(@event.letter.thumb) end
    %tr
      %td=t('venue')
      %td= @event.venue
    %tr
      %td=t('official')
      %td= @event.official
    %tr
      %td=t('organizer')
      %td= @event.organizer

%br


%span.medium.btn.primary
  = link_to t('back'), events_path



