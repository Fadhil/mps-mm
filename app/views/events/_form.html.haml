= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :time
    = f.time_select :time
  .field
    = f.label :venue
    = f.text_field :venue
  .field
    = f.label :official
    = f.text_field :official
  .field
    = f.label :organizer
    = f.text_field :organizer
  .actions
    = f.submit 'Save'
